-- admin
CREATE USER board IDENTIFIED by board;
GRANT CONNECT, RESOURCE, CREATE VIEW TO board;
-- board
CREATE TABLE MESSAGES (
    SEQ NUMBER,
    WRITER VARCHAR2(20) NOT NULL,
    MESSAGE VARCHAR(300) NOT NULL,
    WRITE_DATE TIMESTAMP DEFAULT SYSDATE
);

CREATE SEQUENCE MESSAGES_SEQ
    START WITH 1
    INCREMENT BY 1
    NOMAXVALUE
    NOCACHE
    NOCYCLE;

CREATE TABLE MEMBERS(
    ID VARCHAR2(30),
    PW VARCHAR2(64) NOT NULL,
    NAME VARCHAR2(20) NOT NULL,
    CONTACT VARCHAR2(20) NOT NULL,
    REG_DATE TIMESTAMP DEFAULT SYSDATE,
    PRIMARY KEY(ID)
);